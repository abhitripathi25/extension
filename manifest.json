{
    "manifest_version": 3,
    "name": "Kavalar Eye",
    "version": "1.0",
    "description": "Chrome extension to classify images using a Flask API.",
    "permissions": [
      "activeTab",
      "storage"
    
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' https://smtpjs.com/v3/smtp.js; object-src 'self'"
  }
    ,  
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
        "16": "images/images/icon16x16.png",
        "48": "images/images/icon48x48.png",
        "128": "images/images/icon128x128.png"
      },
      
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  